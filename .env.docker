# Configuração para uso com Docker Compose
# Copie este arquivo para .env ou use: export $(cat .env.docker | xargs)

# Database (Docker Compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=npllm
DB_USER=npllm_user
DB_PASSWORD=npllm_password

# Model (opcional - usa defaults se não especificar)
MODEL_BASE_MODEL=codellama/CodeLlama-3b-Instruct-hf
MODEL_DEVICE=cpu
MODEL_MAX_MEMORY=6GB
